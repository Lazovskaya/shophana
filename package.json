{
    "name": "shophana",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^5",
        "@sap/hana-client": "^2.6.61",
        "express": "^4",
        "@sap/cds-odata-v2-adapter-proxy": "1.7.1"
    },
    "devDependencies": {
        "@sap/hdi-deploy": "^4.0.5",
        "sqlite3": "^5.0.2"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "scripts": {
        "hana": "cds deploy --to hana:shophana-db --auto-undeploy",
        "start": "cds run",
        "build": "cds build"
    },
    "cds": {
        "cov2ap": {
            "targetPath":"odata/v4",
            "path":"odata/v2",
            "disableNetworkLog":false
        },
        "preview": {
            "ui5": {
                "version":"1.80.2"
            }
        },
        "hana": {
            "deploy-format": "hdbtable"
        },
        "requires": {
            "db": {
                "kind": "hana"
            }
        }
    }
}
